<style>
    #title{
        float:left;
    }
    #header{
        display: flex;
        justify-content: center;
        height:115px;
        background: -webkit-linear-gradient(left, #e4f5fc 0%, #bfe8f9 50%, #9fd8ef 63%, #2ab0ed 100%); /* FF3.6-15 */
        padding-top: 15px;
    }
    #logo{
        position: absolute;
        left: 10px;
        top: 10px;
    }
</style>

<div id="header">
            <img id="logo" src="{{=URL('static', 'images/wagMoreLogo.png')}}" width="200" height="152" alt="Woof!">
            <div id="title">
                <h1>Edit you and your doggo's pictures</h1>
            </div>
</div>


<center>
{{=form.custom.begin}}
{{if (images == None) or (len(images.profilePicDog) == 0):}}
                    <img width="100"  src="{{=URL('static', 'images/No_Image_Available.png')}}"/>

                    {{else:}}

                    <img width="100" src="{{=URL('download', args=images.profilePicDog)}}"/>
                    {{pass}}
{{=form.custom.widget.profilePicDog}}

{{if (images == None) or (len(images.profilePic) == 0):}}
                    <img width="100"  src="{{=URL('static', 'images/No_Image_Available.png')}}"/>

                    {{else:}}

                    <img width="100" src="{{=URL('download', args=images.profilePic)}}"/>
                    {{pass}}
{{=form.custom.widget.profilePic}}


<div id="info">
		<input type="image" alt="Error" src="{{=URL('static', 'images/nextButton.png')}}", height="150px">
        {{=form.custom.end}}
	</div>
</center>
