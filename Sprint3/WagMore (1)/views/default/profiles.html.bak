<head>
    <title>Profiles</title>
    <link rel="shortcut icon" href="{{=URL('static', 'images/title.png')}}" />
    <link rel="stylesheet" type="text/css" href="{{=URL('static', 'iPad.css')}}">
</head>
<div id="header">
        <img id="logo" src="{{=URL('static', 'images/wagMoreLogo.png')}}" width="200" height="152" alt="Woof!">
         <a href="{{=URL('default', 'inventory')}}" target="_blank">    <img id="inventory" src="{{=URL('static', 'images/inventoryLogo.png')}}" width="200" height="152" alt="Woof!"></a>
    <a href="{{=URL('default', 'shop')}}" target="_blank"><img id="shop" src="{{=URL('static', 'images/shopLogo.png')}}" width="200" height="152" alt="Woof!" ></a>
            
    <center>
        <div id="title">
            <img src="{{=URL('static', 'images/commonCoin')}}" width="40" height="40"  alt="commonCoin"/>x {{=commonCoin}}
            <img src="{{=URL('static', 'images/uncommonCoin')}}" width="40" height="40" alt="uncommonCoin"/>x {{=uncommonCoin}}
            <img src="{{=URL('static', 'images/rareCoin')}}" width="40" height="40" alt="rareCoin"/>x {{=rareCoin}}
        </div>


        <img id="logOut" src="{{=URL('static', 'images/buttonLogout.png')}}"  alt="Log out" onclick="location.href='{{=URL('default', 'user', args=['logout'])}}'">


        <img id="myProfile" src="{{=URL('static', 'images/buttonMyprofile.png')}}" alt="My profile" onclick="location.href='{{=URL('default', 'show', args=[auth.user.id,-1])}}'" style="cursor: pointer">
<br>
        {{if not showBlocked:}}
            <img id="blockedMatches" src="{{=URL('static', 'images/buttonBlockedmatches.png')}}" width="180" height="180" alt="Blocked" onclick="location.href='{{=URL('default', 'profiles', args="blocked")}}'" style="cursor: pointer">
        {{else:}}
            <img id="blockedMatches" src="{{=URL('static', 'images/buttonShowmatches.png')}}"  alt="Show matches" onclick="location.href='{{=URL('default', 'profiles')}}'" style="cursor: pointer">
        {{pass}}
        <div><br><br><br><br><br><br><br><br>

            <img id="moreMatches" style="right; cursor: pointer" src="{{=URL('static', 'images/buttonCheckmatches.png')}}"  alt="Reload your matches!" onclick="location.href='{{=URL('default', 'profiles', args="ReloadMatches")}}'" >
        </div>

                <button id="Buttonmessage" style="font-size: 12px; background-color: #FFFFFF; top: 175px; left: 30px;border-color: black;">
        <i id="messageButton" name="messageButton" class="fa fa-envelope fa-2x" style="color:black"> Messages</i>
    <div id="messages" style="position: absolute;" class="display2";></div>
    </button>

</div>
        <center>
    <a href="{{=URL('default', 'forum')}}"><button class="button1">Forum</button></a>
</center>
    {{if numberOfMatches==0:}}
        <h4 align="center">Sorry {{=auth.user.first_name}}, you have no matches! Nobody wants you!</h4>
    {{else:}}
        <h4 align="center"><br>Congratulations, {{=auth.user.first_name}}! You have matches!<br>Showing {{=(numberOfMatches-numberOfBlocked)}} match(es).</h4>
    <h5><br><center>{{=dailyReward}}</center></h5>

        {{if numberOfBlocked==1:}}
            <h4 align="center">You have blocked 1 person</h4>
        {{else:}}
            <h4 align="center">You have blocked {{=numberOfBlocked}} people</h4>
        {{pass}}
    {{pass}}
    {{for match in matches:}}
        {{if match.blocked==showBlocked:}}
          {{i=0}}
            {{otherMatch=db((db.matchTable.idFromMatch==match.idToMatch) & (db.matchTable.idToMatch==auth.user.id))}}
            {{if(otherMatch.count()>0):}}
                {{otherMatchID=db((db.matchTable.idFromMatch==match.idToMatch) & (db.matchTable.idToMatch==auth.user.id)).select()[0].id}}
            {{else:}}
                {{otherMatchID=-1}}
            {{pass}}
            {{messagesToOpen=db(((db.post.item_id ==match.id) | (db.post.item_id ==otherMatchID)) & (db.post.fromid !=auth.user.id) & (db.post.opened==False)).count()
            if (messagesToOpen>0):}}
                <!--<h2>YOU HAVE {{=messagesToOpen}} NEW MESSAGES</h2> -->
            {{pass}}
            {{profile=db(db.profile.id==match.idToMatch).select()[0]}}
            <div class="profile">
            <div class="name"><b>{{=A(profile.name, _href=URL("show", args=[profile.id, match.id]))}}</b> AND
            <b>{{=A(profile.dogName, _href=URL("show", args=[profile.id, match.id]))}}</b></div>
            <img id="frame" width="300px" height="250px" style="float:left" src="{{=URL('static', 'images/marco.png')}}"/>

                <div class="profPerson" >
                    {{picture =db(db.images.id==profile.id).select().first()}}
                    {{if (picture == None) or (len(picture.profilePic) == 0):}}
                    <img width="100%", height="100%"  src="{{=URL('static', 'images/No_Image_Available.png')}}"/>
                    {{else:}}
                    <img width="105px"
                         src="{{=URL('download', args=picture.profilePic)}}"
                         onClick='window.location="{{=URL('show', args=[profile.id, match.id])}}";'/>
                    {{pass}}
                </div>
                <div class="profDog">

                    {{if (picture == None) or (len(picture.profilePicDog) == 0):}}
                        <img width="105px", height="100%" src="{{=URL('static', 'images/No_Image_Available.png')}}"/>
                    {{else:}}
                        <img width="105px"
                        src="{{=URL('download', args=picture.profilePicDog)}}"/>
                    {{pass}}
                </div>
                {{if match.percentage>89:
                    img = "images/4paws_2.png"
                    comp = str(match.percentage) + "% compatibility"
                  elif match.percentage>74:
                    img = "images/3paws_2.png"
                    comp = str(match.percentage) + "% compatibility"
                  elif match.percentage>59:
                    img = "images/2paws_2.png"
                    comp = str(match.percentage) + "% compatibility"
                  else:
                    img = "images/1paws_2.png"
                    comp = str(match.percentage) + "% compatibility"
                  pass
                    }}
                <div class="paws">
                    <img width="105px" src="{{=URL('static', img)}}">
                    <span class="tooltiptext">{{=comp}}</span>

                </div>
                {{if (messagesToOpen>0):}}
                    <img class="msn" width="120px" src="{{=URL('static', 'images/msn.png')}}" onclick="location.href='{{=URL("show", args=[profile.id, match.id])}}'"/>
                {{pass}}
                {{if (match.distance < 2):}}
                    <h3>You are less than 2 miles away!!</h3>
                {{else:}}
                    <h3>You are {{=match.distance}} miles away</h3>
                {{pass}}
            </div>
        {{i=i+1}}
      {{pass}}
    {{pass}}
        <script>
    var messagesClicked = false;
    $("#messageButton").click(function () {
        messagesClicked = !messagesClicked;
        if (messagesClicked == true) {
            $.ajax({
                url: '{{=URL('default', 'getMessages', args=["unread"])}}', success: function (hello) {
                    $("#Buttonmessage").css("background-color","white");
                    $("#Buttonmessage").css("background-color", "black");
                    $("#messageButton").css("color", "white");
                    $("#messages").append("<div> <b>New messages from: </b></div>");
                    $("#messages").append(hello);
                }
            });
        }
            else {
             $.ajax({
                 url: '{{=URL('default', 'unMessages', )}}',
                 success: function (result) {
                     $("#Buttonmessage").css("background-color","black");
                     $("#Buttonmessage").css("background-color", "white");
                        $("#messageButton").css("color", "black");
                        $("#messages").html(result);
                    }
             });
         }
         if(messagesClicked == true) {
             $.ajax({
                 url: '{{=URL('default', 'getMessages',args=["read"] )}}', success: function (result) {
                       $("#Buttonmessage").css("background-color","white");
                      $("#Buttonmessage").css("background-color", "black");
                      $("#messageButton").css("color", "white");
                      $("#messages").append("<div> <b>Inbox: </b></div>");
                      $("#messages").append(result);

                 }
               });

        }
       else {
            $.ajax({
                url: '{{=URL('default', 'unMessages', )}}',
                success: function (result) {
                    $("#Buttonmessage").css("background-color","black");
                    $("#Buttonmessage").css("background-color", "white");
                    $("#messageButton").css("color", "black");
                    $("#messages").html(result);
                }
            });
        }

    });
</script>
